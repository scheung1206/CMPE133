<table style="width:100%; border-collapse: separate; border-spacing: 0px 10px">
  <% @companies.each do |company| %>
    <tr>
      <td>
        <div class="bluebox">
        <div style="width:90%; height:250px; background-color: #d0e3ed; margin-left:5%; ">
          <header style="padding:1em; color:black; clear:left; text-align:center;">
            <h1><%= company.name %></h1>
          </header>
          <div>
            <% unless company.avatar_url.nil? %>
              <div class="round">
                <%= image_tag(company.avatar_url(:profile), size:"200") %>
              </div>
              <% else %>
              <div class="round">
                <img src="/assets/defaultcompany">
              </div>
              <% end %>
              <div style="margin-left:10%;">
                <%= link_to 'Edit Profile', edit_company_path(company) %>
              </div>
          </div>
        </div>
        <div class="description">
          <div style="margin-left:25%; padding:1em; overflow:hidden; text-align:left; ">
            <%= company.description %>
          </div>
        </div>
      </td>
    </tr>
  <% end %>
</table>
