<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :occupation %>
    <%= f.input :education %>
    <%= f.input :resume %>
    <%= f.input :skill %>
    <legend>Avatar</legend>
<%= f.file_field :avatar %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

